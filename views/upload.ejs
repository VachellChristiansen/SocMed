<!DOCTYPE html>

<head>
  <title>DeepSpace - Upload</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta charset="utf-8">
  
  <link rel="shortcut icon" href="/assets/favicon.png" type="image/x-icon"> 
  <link rel="stylesheet" href="/css/upload.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
  <script src="https://kit.fontawesome.com/9b64058bd2.js" crossorigin="anonymous"></script>
</head>

<body>

  <header class="primary-header"> 
    <div class="container grid navbar">
      <div class="flex-row align-cen">
        <a href="/" class="logo">DeepSpace</a>
      </div>
      <div class="search-bar">
        <form class="justify-cen align-cen flex-row" action="/search">
          <button class="submit-search" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>
          </button>
          <input class="search" type="search" name="search" placeholder="Searching for something?">
        </form>
      </div>
      <% if (current == '') { %>
      <div class="sign-button flex-row justify-end align-cen">
        <a href="/upload" class="btn upload">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="black" class="bi bi-upload" viewBox="0 0 16 16">
            <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"/>
            <path d="M7.646 1.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 2.707V11.5a.5.5 0 0 1-1 0V2.707L5.354 4.854a.5.5 0 1 1-.708-.708l3-3z"/>
          </svg>
        </a>
        <a href="/user/register" class="btn signup">Sign Up</a>
        <a href="/user/login" class="btn signin">Sign In</a>
      </div>
      <% } else { %>
      <div class="sign-button flex-row justify-end align-cen">
        <a href="/upload" class="btn signup">+ Upload</a>
        <div class="profile-button flex justify-end align-cen">
          <img class="user-profile-pic master h-100" src="<%= current.image %>" alt="profile">
        </div>
      </div>
      <% } %>
    </div>

  </header>

  <div class="fullscreen-bg">
    <!-- <video autoplay loop muted id="background-video">
      <source src="assets/background-video.mp4">
    </video> -->
  </div> 

<div class="conts flex justify-cen align-cen">
  <form class="form-container flex-col align-cen" action="/user/uploadPost" method="POST" enctype="multipart/form-data">
    <div class="text-title-big">Upload Video</div>
    <!-- <div class="text-title">Post a video to your account</div> -->
   <div class="flex-row justify-cen align-cen">
      <div class="grid justify-ite">
        <label for="title" class="text-title">Caption</label>
        <div class="comment-add justify-cen align-cen flex-row">
          <textarea name="title" class="comment-text-box" placeholder="Put your caption here..." rows="4" cols="40" maxlength="150" required></textarea>
        </div>
        <label for="music" class="text-title">Music Used</label>
        <div class="comment-add justify-cen align-cen flex-row">
          <textarea name="music" class="comment-text-box" placeholder="[Artist] - [Music]" rows="2" cols="40" maxlength="50" required><%= user %> - Original Sound</textarea>
        </div>
        <label for="myFile" class="text-title">Upload Video Content</label>
        <div class="comment-add justify-cen align-cen flex-row">
        <input type="file" name="myFile" id="myFile" accept="video/mp4,video/x-m4v,video/*" required >
        </div>
      </div>
    </div>

    <div class="buttons-form flex">
      
        <button class="upload-button buttons-below" type="submit">Upload</button>
        <a class="cancel-button buttons-below" href="/" >Cancel</a>

    </div>
  </form>
</div>
<script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
<!-- bootstrap js -->
<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct"
  crossorigin="anonymous"
></script>
  <script src="/js/upload.js"></script>
</body>

</html>