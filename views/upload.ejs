<!DOCTYPE html>

<head>
  <title>DeepSpace - Upload</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta charset="utf-8">
  
  <link rel="shortcut icon" href="/assets/favicon.png" type="image/x-icon"> 
  <link rel="stylesheet" href="/css/upload.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
  <script src="https://kit.fontawesome.com/9b64058bd2.js" crossorigin="anonymous"></script>
</head>

<body>

  <header class="primary-header">
    <div class="container grid navbar">
      <div class="flex-row align-cen">
        <a href="/" class="logo">DeepSpace</a>
      </div>
      <div class="search-bar">
        <form action="/search" class="justify-cen align-cen flex-row">
          <button class="submit-search" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>
          </button>
          <input class="search" type="search" placeholder="Searching for something?">
        </form>
      </div>
      <div class="sign-button flex-row justify-end align-cen">
        <a href="/upload" class="btn signup">+ Upload</a>
        <a href="/user/login" class="btn signin">Sign In</a>
      </div>
    </div>
  </header>

  <div class="fullscreen-bg">
    <!-- <video autoplay loop muted id="background-video">
      <source src="assets/background-video.mp4">
    </video> -->
  </div> 

<div class="conts flex justify-cen align-cen">
  <form class="form-container flex-col align-cen" action="/search">
    <div class="text-title-big">Upload Video</div>
    <div class="text-title">Post a video to your account</div>
   <div class="flex-row justify-cen align-cen">
      <div class="drop">
        <div class="drop-zone">
          <span class="drop-zone__prompt">Drop file here or click to upload</span>
          <input type="file" name="myFile" class="drop-zone__input">
        </div>
      </div>
      <div class="right grid justify-ite">
        <div class="text-title">Caption</div>
        <div class="comment-add justify-cen align-cen flex-row">
          <textarea class="comment-text-box" placeholder="Put your caption here..." rows="4" cols="40" maxlength="150"></textarea>
      </div>
        <div class="text-title">Music Used</div>
        <div class="comment-add justify-cen align-cen flex-row">
          <textarea class="comment-text-box" placeholder="[Artist] - [Music]" rows="2" cols="40" maxlength="50"></textarea>
      </div>
      
      </div>
   </div>



    <div class="buttons-form flex">
      <div class="upload-button buttons-below">
        <button type="submit">Upload</button>
      </div>
      <div class="cancel-button buttons-below">
        <button>Cancel</button>
      </div>
    </div>
  </form>
</div>
<script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
<!-- bootstrap js -->
<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct"
  crossorigin="anonymous"
></script>
  <script src="/js/upload.js"></script>
</body>

</html>